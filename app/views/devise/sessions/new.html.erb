<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-md-6 col-sm-4 ">
      <div class="form-login">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, autocomplete: "email", placeholder: "evan@gmail.com" %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, placeholder: "•••••••••••••"  %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "boutton" %>
        </div>
        <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


