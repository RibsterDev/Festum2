              <%= f.label 'Nom du groupe', class: 'form-control-label' %>
              <%= f.text_field :name, class: 'form-control-group' %>
            </div>
            <div class="form">
              <%= f.label "Date de l'évènement", class: 'form-control-label' %>
              <%= f.input_field :date_event, as: :string, class: "flatpikr" %>
