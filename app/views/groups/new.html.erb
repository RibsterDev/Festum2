<div class="responsive-container-group-right">

        <div class="form-groupe">
          <h2>Créer votre groupe</h2>
          <%= simple_form_for(@group) do |f| %>
            <div class="form">
              <%= f.label 'Quel nom pour ton groupe ?', class: 'form-control-label' %>
              <%= f.text_field :name, class: 'form-control-group', placeholder: "Ex : Soirée des potos" %>
            </div>
            <div class="form">
              <%= f.label "À quelle date veux-tu organiser la soirée ?", class: 'form-control-label' %>
              <%= f.input_field :date_event, as: :string, class: "flatpikr", placeholder: "Ex : 07 décembre 2019" %>
            </div>
            <div class="form">
              <%= f.label "Dans quelle ville ?", class: 'form-control-label' %>
              <%= f.text_field :location, class: 'form-control-group', placeholder: "Ex : Lyon" %>
            </div>
           <div class="form">
              <%= f.label "Ajoute tes amis !", class: 'form-control-label' %>
              <%= f.input_field :email, class: 'form-control-group', placeholder: "Ex : benjamin.prejent@gmail.com" %>
              <div class="email">
                <a  id="add-friend-input" ><i class="fas fa-plus-circle"></i></a>
              </div>
            </div>
            <%= f.submit "Valide ton groupe !", class: "boutton" %>
            <% end %>
        </div>
  </div>
</div>

