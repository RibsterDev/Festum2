          <%= simple_form_for(@group) do |f| %>
            <div class="form">
              <%= f.label 'Quel nom pour ton groupe ?', class: 'form-control-label' %>
              <%= f.text_field :name, class: 'form-control-group', placeholder: "Soirée des potos" %>
            </div>
            <div class="form">
              <%= f.label "À quelle date veux-tu organiser la soirée ?", class: 'form-control-label' %>
