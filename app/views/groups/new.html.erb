            </div>
            <div class="form">
              <%= f.label "Temps pour voter", class: 'form-control-label' %>,
              <%= f.input_field :vote_duration, class: 'form-control-group' %>
            </div>
          <!-- </div> -->
            <div class="form">
              <%= f.label "Ajouter un ami(es)", class: 'form-control-label' %>
