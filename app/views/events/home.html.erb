<div class="banner" style="background-image: url('<%= image_url "undraw_having_fun_iais.svg" %>')">
  <div class="container d-flex flex-column justify-content-center align-items-center">

    <h1>FESTUM</h1>
    <p>Come out, Discover, Enjoy !</p>
        <div class="bg_search">
          <h4>Chercher un évènement</h4>
            <div class="search">
              <%= form_for(:query, url: categories_events_path, method: :get) do |f| %>
              <div class="field">
                <%= f.label 'Où ?', class: 'label' %>
                <div class="field-input">
                  <%= f.text_field :address, name: 'address', place_holder: 'Where do you want to go?'%>
                </div>
              </div>
              <div class="field">
                <%= f.label 'Quand ?', class: 'label' %>
                <div class="field-input">
                  <%= f.date_field :date_start, name: 'date_start', place_holder: 'Your date please' %>
                </div>
              </div>
              <div class="main-search">
                <%= link_to "events", events_path %>
                <%= f.submit 'Search', class: 'btn-flat', id: 'btn-flat-1' %>

              </div>
            </div>
          <% end %>
        </div>
  </div>
</div>

