<h1> LISTE DE TOUS NOS EVENEMENTS</h1>

<%= simple_form_for([@group, @event_user]) do |f| %>

  <% @events.each do |event| %>
    <label>
      <div style="height: 200px; margin-bottom: 20px; background: steelblue">

        <input style="display: none;" type="radio" name="event_id" value="<%= event.id %>">

        <p><%= event.name %></p>
      </div>
    </label>
  <% end %>

  <%= f.button :submit %>

   <div
       id="map"
       style="width: 100%;
       height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
     ></div>
<% end %>


  <%= link_to "Groupe show", group_path(params[:group_id]) %>


